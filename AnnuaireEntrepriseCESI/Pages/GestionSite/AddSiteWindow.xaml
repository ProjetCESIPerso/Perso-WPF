<Window x:Class="AnnuaireEntrepriseCESI.Pages.GestionSite.AddSiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireEntrepriseCESI.Pages.GestionSite"
        mc:Ignorable="d"
       Title="Ajouter un site" Height="150" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nom du site :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox Name="NameSite" KeyDown="NameSite_KeyDown" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="20,45,0,0"/>

        <Button Content="Valider" Click="BtnValiderClick" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="20,80,0,0" />
        <Button Content="Retour" Click="BtnRetourClick" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,80,0,0" />
        <Label Content="Ajout" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Height="23" Width="230"/>
    </Grid>
</Window>
